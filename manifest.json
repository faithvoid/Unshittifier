{
  "manifest_version": 3,
  "name": "Unshittifier",
  "version": "1.0",
  "description": "A Firefox extension that blocks social media websites subject to enshittification.",
  "permissions": ["webRequest", "webRequestBlocking"],
  "host_permissions": [
    "*://x.com/*",
    "*://instagram.com/*",
    "*://www.instagram.com/*",
    "*://meta.com/*",
    "*://www.meta.com/*",
    "*://facebook.com/*",
    "*://www.facebook.com/*",
    "*://www.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
